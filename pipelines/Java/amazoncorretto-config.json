{
    "variables": {
        "dockerhub_user": null,
        "dockerhub_pw": null
    },
    "builders": [
        {
            "type": "docker",
            "image": "maven:3.8.7-amazoncorretto-11",
            "commit": "true"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [ "amazoncorretto-install-dependencies.sh", "../init.sh", "init.sh" ]
        },
        {
            "type": "file",
            "source": "../scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../scripts-build/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "maven-settings.xml",
            "destination": "/usr/share/maven/conf/settings.xml"
        },
        {
            "type": "file",
            "source": "./scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../basic/aws/",
            "destination": "/root/.aws/"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "zepben/pipeline-java",
                "tags": ["4.3.0", "latest"]
            },
            {
                "type": "docker-push",
                "login": true,
                "login_username": "{{user `dockerhub_user`}}",
                "login_password": "{{user `dockerhub_pw`}}"
            }
        ]
    ]
 }

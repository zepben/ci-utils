{
    "variables": {
        "dockerhub_user": null,
        "dockerhub_pw": null
    },
    "builders": [
        {
            "type": "docker",
            "image": "node:12-alpine",
            "commit": "true"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [ "install-dependencies.sh", "../init.sh" ]
        },
        {
            "type": "file",
            "source": "../scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../scripts-build/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "./scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "./.npmrc",
            "destination": "/root/.npmrc"
        }
    ],
   "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "zepben/pipeline-node",
                "tags": ["2.1.0", "latest"]
            },
            {
                "type": "docker-push",
                "login": true,
                "login_username": "{{user `dockerhub_user`}}",
                "login_password": "{{user `dockerhub_pw`}}"
            }
        ]
    ]
 }

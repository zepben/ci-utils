{
    "variables": {
        "dockerhub_user": null,
        "dockerhub_pw": null
    },
    "builders": [
        {
            "type": "docker",
            "image": "alpine",
            "commit": "true"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./scripts/",
            "destination": "/scripts"
        },
        {
            "type": "shell",
            "scripts": [ "install-dependencies.sh", "../init.sh" ]
        },
        {
            "type": "file",
            "source": "../scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../CSharp/scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../Java/scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../JavaScript/scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "../Python/scripts/",
            "destination": "/scripts"
        },
        {
            "type": "file",
            "source": "./aws/",
            "destination": "/root/.aws/"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "zepben/pipeline-basic",
                "tags": ["5.6.0", "latest"]
            },
            {
                "type": "docker-push",
                "login": true,
                "login_username": "{{user `dockerhub_user`}}",
                "login_password": "{{user `dockerhub_pw`}}"
            }
        ]
    ]
 }
